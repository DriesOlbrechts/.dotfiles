# startup
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Logging
yabai -m config debug_output on

# manage tiling
yabai -m config layout bsp

# gaps
yabai -m config top_padding 16
yabai -m config bottom_padding 16
yabai -m config left_padding 59
yabai -m config right_padding 16
yabai -m config window_gap 16

# mouse support
yabai -m config mouse_modifier alt
yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus on 

#windows
yabai -m config window_shadow float

yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.8


# borders 
borders active_color=0xffc688cd inactive_color=0xff6e3973 width=5.0 &

# rules
yabai -m rule --add app="^Slack$" space=1
yabai -m rule --add app="^Alacritty$" space=2
yabai -m rule --add app="^Spotify$" space=3
yabai -m rule --add app="^Zen$" space=4

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Legcord$" manage=on

